<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>souscrire</servlet-name>
    <servlet-class>controlleur.ServletSouscription</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>servletmango</servlet-name>
    <servlet-class>controlleur.ServletMango</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>servletHemle</servlet-name>
    <servlet-class>controlleur.ServletHemle</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>servletMeilleurForfait</servlet-name>
    <servlet-class>controlleur.ServletMeilleurForfait</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>souscrire</servlet-name>
    <url-pattern>/Souscrire</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>servletmango</servlet-name>
    <url-pattern>/ForfaitMango</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>servletHemle</servlet-name>
    <url-pattern>/ForfaitHemle</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>servletMeilleurForfait</servlet-name>
    <url-pattern>/Meilleur-Forfait</url-pattern>
  </servlet-mapping>

</web-app>
